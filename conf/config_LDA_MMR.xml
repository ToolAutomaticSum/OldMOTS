<?xml version="1.0" encoding="UTF-8"?>
<CONFIG>
	<TASK ID="1">
		<LANGUAGE>english</LANGUAGE>
		<OUTPUT_PATH>output</OUTPUT_PATH>
		<MULTITHREADING>false</MULTITHREADING>		
		<PROCESS>
			<OPTION NAME="CorpusIdToSummarize">all</OPTION>
			<OPTION NAME="ReadStopWords">false</OPTION>
			<INDEX_BUILDER NAME="LDA.QueryLDA">
				<OPTION NAME="K">10</OPTION>
				<OPTION NAME="Alpha">0.2</OPTION>
				<OPTION NAME="Beta">0.01</OPTION>
			</INDEX_BUILDER>
			<CARACTERISTIC_BUILDER NAME="vector.MeanVectorSentence">
			</CARACTERISTIC_BUILDER>
			<SCORING_METHOD NAME="QuerySimilarity">
				<OPTION NAME="SimilarityMethod">JensenShannonSimilarity</OPTION>
			</SCORING_METHOD>
			<SUMMARIZE_METHOD NAME="MMR">
                               	<OPTION NAME="CharLimitBoolean">true</OPTION>
                               	<OPTION NAME="Size">100</OPTION>
                               	<OPTION NAME="Lambda">0.7</OPTION>
                               	<OPTION NAME="SimilarityMethod">JensenShannonSimilarity</OPTION>
                       	</SUMMARIZE_METHOD>
		</PROCESS>
		<ROUGE_EVALUATION>
			<ROUGE_MEASURE>ROUGE_1	ROUGE_2	ROUGE_SU4</ROUGE_MEASURE>
			<MODEL_ROOT>models</MODEL_ROOT>
			<PEER_ROOT>systems</PEER_ROOT>
		</ROUGE_EVALUATION>
	</TASK>
</CONFIG>
