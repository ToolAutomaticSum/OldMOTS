<?xml version="1.0" encoding="UTF-8"?>
<CONFIG>
	<TASK ID="1">
		<LANGUAGE>english</LANGUAGE>
		<MULTITHREADING>true</MULTITHREADING>		
		<OUTPUT_PATH>output</OUTPUT_PATH>
		<PROCESS>
			<OPTION NAME="CorpusIdToSummarize">all</OPTION>
			<OPTION NAME="ReadStopWords">false</OPTION>
			<INDEX_BUILDER NAME="BasicIndexBuilder"></INDEX_BUILDER>
			<CARACTERISTIC_BUILDER NAME="hLDA.HLDA">
				<OPTION NAME="Alpha">10.0</OPTION>
				<OPTION NAME="Gamma">0.01</OPTION>
				<OPTION NAME="Eta">1.0</OPTION>		
				<OPTION NAME="NbIteration">1000</OPTION>
				<OPTION NAME="NumLevels">4</OPTION>
			</CARACTERISTIC_BUILDER>
			<SUMMARIZE_METHOD NAME="PathSum">
				<OPTION NAME="Size">100</OPTION>
				<OPTION NAME="SimilarityMethod">JensenShannonSimilarity</OPTION>
			</SUMMARIZE_METHOD>
		</PROCESS>
		<ROUGE_EVALUATION>
			<ROUGE_MEASURE>ROUGE_1	ROUGE_2	ROUGE_SU4</ROUGE_MEASURE>
			<MODEL_ROOT>models</MODEL_ROOT>
			<PEER_ROOT>systems</PEER_ROOT>
		</ROUGE_EVALUATION>
	</TASK>
</CONFIG>
